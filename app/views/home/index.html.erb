<h1 class="mb-5">Welcome to BetaBlog!</h1>
<div class="row">
  <% @blogs.each do |blog| %>
    <div class="col-md-6 col-lg-4">
        <div class="card home-card mb-3">
          <img class="card-img-top" src="<%= url_for(blog.header_image)%>" alt="Card image cap">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text"><%= truncate(blog.description, length: 100) %></p>
            <%= link_to "Read Post", blog_path(blog.id), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
    </div>
  <% end %>
</div>
